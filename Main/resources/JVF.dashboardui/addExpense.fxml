<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="10" style="-fx-background-color: black; -fx-border-color: #00ffae;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JVF.Finances.ExpensesController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Adding Expense" textFill="#00ffae" />

    <Label text="Expense Type:" textFill="#00ffae" />
   <ChoiceBox fx:id="ExpType" prefWidth="150.0" style="-fx-background-color: #00ffae;" />

    <Label text="Amount:" textFill="#00ffae" />
    <TextField fx:id="amountField" style="-fx-background-color: #00ffae; -fx-border-color: black;" />
   <Label text="Receipt:" textFill="#00ffae" />
   <TextField fx:id="Receipt" style="-fx-background-color: #00ffae;" />
   <Label text="Date" textFill="#00ffae" />
   <DatePicker fx:id="ExpDate" style="-fx-background-color: #00ffae;" />
   <Label text="Current Cash:" textFill="#00ffae" />
   <Label fx:id="CurrCash" textFill="#00ffae" />
   <Label text="Cash Left:" textFill="#00ffae" />
   <Label fx:id="CashLeft" textFill="#00ffae" />

    <Label text="Description:" textFill="#00ffae" />

    <Button onAction="#saveExpense" style="-fx-border-color: black; -fx-background-color: #00ffae;" text="Save" />
</VBox>
