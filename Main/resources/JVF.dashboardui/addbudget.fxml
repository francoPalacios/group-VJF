<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="386.0" prefWidth="452.0" spacing="10" style="-fx-background-color: black; -fx-border-color: #00ffae;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JVF.Finances.BudgetController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Remove the Budget Name area -->

    <Label text="Amount:" textFill="#00ffae" />
    <TextField fx:id="incomeField" style="-fx-background-color: #00ffae; -fx-border-color: black;" />

    <!-- Add the ChoiceBoxes for Recurrence and Budget Type -->
    <Label text="Recurrence:" textFill="#00ffae" />
    <ChoiceBox fx:id="recurrenceChoiceBox" style="-fx-background-color: #00ffae; -fx-border-color: black;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Monthly" />
                <String fx:value="Annual" />
                <String fx:value="One Time" />
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Budget Type:" textFill="#00ffae" />
    <ChoiceBox fx:id="budgetTypeChoiceBox" style="-fx-background-color: #00ffae; -fx-border-color: black;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Transportation" />
                <String fx:value="Housing" />
                <String fx:value="Food" />
                <String fx:value="Entertainment" />
                <String fx:value="Other" />
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Income Start Date:" textFill="#00ffae" />
    <DatePicker fx:id="startDatePicker" style="-fx-background-color: #00ffae; -fx-border-color: black;" />

    <Label text="Income End Date:" textFill="#00ffae" />
    <DatePicker fx:id="endDatePicker" style="-fx-background-color: #00ffae; -fx-border-color: black;" />

    <Button onAction="#budgetadd" style="-fx-border-color: black; -fx-background-color: #00ffae;" text="Save" />
</VBox>
