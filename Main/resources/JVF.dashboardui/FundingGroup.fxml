<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10" style="-fx-background-color: black; -fx-border-color: #00ffae;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JVF.Finances.FundingController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Funding Group Name:" textFill="#00ffae" />
    <TextField fx:id="FGNameField" style="-fx-background-color: #00ffae; -fx-border-color: black;" />

    <Label text="Funding Group Description:" textFill="#00ffae" />
    <TextField fx:id="FGDescriptionArea" style="-fx-background-color: #00ffae; -fx-border-color: black;" />

    <Button onAction="#saveFundingGroup" style="-fx-border-color: black; -fx-background-color: #00ffae;" text="Save" />
</VBox>
