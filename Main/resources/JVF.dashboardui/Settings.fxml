<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="10" style="-fx-background-color: black; -fx-border-color: #00ffae; -fx-border-width: 2px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JVF.Finances.SettingsController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Settings" textFill="#00ffae" />

    <Button fx:id="logout" onAction="#handleLogout" style="-fx-background-color: #00ffae; -fx-border-color: black;" text="Logout" />
    <Button fx:id="deleteProfile" onAction="#handleDeleteProfile" style="-fx-background-color: #00ffae; -fx-border-color: black;" text="Delete Profile" />
    <Button fx:id="mainMenu" style="-fx-background-color: #00ffae; -fx-border-color: black;" text="Main Menu" />

</VBox>